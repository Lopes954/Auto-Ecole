{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form method="post" id="containerform">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <h1>se connecter</h1>
                <div class="social-media">
                    {# <a href="{{ path('app_forgot_password_request') }}">reset</a> #}
                    <p><i class="fab fa-instagram"></i></p>&nbsp;&nbsp;
                    <p><i class="fab fa-google"></i></p>&nbsp;&nbsp;
                    <p><i class="fab fa-facebook-square"></i></p>&nbsp;&nbsp;
                    <p><i class="fas fa-envelope-square"></i></p>&nbsp;&nbsp;
                </div>
                <p class="choose-email"></p>

    <label for="inputUsername">Username</label>
    <input type="text"  name="username" id="inputUsername" class="form-control" >
    <label for="inputPassword">Mot de passe</label>
    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

{#     
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button type="submit" id="btnsub">se connecter</button>
</form>
{% endblock %}
