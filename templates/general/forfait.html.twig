{% extends 'base.html.twig' %}

{% block title %}Forfait{% endblock %}

{% block body %}
<div class="page">


            {# avantageFormation #}
            {{ include("general/forfait/avantageformation.html.twig") }}

            <div class="container"id="containerhomebtn">
                <div class="row">
                    <div class="col-sm-2">
                    <button class="doc"><i class="fas fa-file-import"id="logojustificatif">&nbsp;&nbsp;</button></i>
                        
                        
                        <ul class="dd"id="listejustificatif">
                            <h3 class="docfournir">Document a fournir</h3>
